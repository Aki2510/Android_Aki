<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/basic_info_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/basic_info_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/basic_info_item_image"
        android:layout_toRightOf="@id/basic_info_item_image" />

    <TextView
        android:id="@+id/basic_info_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/basic_info_item_name"
        android:layout_toEndOf="@id/basic_info_item_image"
        android:layout_toRightOf="@id/basic_info_item_image" />
</RelativeLayout>