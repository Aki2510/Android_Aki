<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_view_item_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T.5"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/recycler_view_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29/06"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/recycler_view_item_image"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/recycler_view_item_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31\u00B0/25\u00B0"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/recycler_view_item_precipitation_probability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59%"
        android:drawableLeft="@drawable/water_icon"
        android:textColor="#304ffe" />
</LinearLayout>