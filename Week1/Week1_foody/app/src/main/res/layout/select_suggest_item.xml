<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/select_suggest_image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/select_suggest_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:textColor="#ff8a80" />

    <TextView
        android:id="@+id/select_suggest_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25% off for a table of two"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/select_suggest_discount_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Dinner 25% off, and only 68 USD/each in Solois Coffee"
        android:textColor="#9e9e9e" />

</LinearLayout>